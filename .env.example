# Robokassa Payment Configuration
# Получите эти значения в личном кабинете Robokassa
ROBOKASSA_MERCHANT_LOGIN=your_merchant_login
ROBOKASSA_PASSWORD1=your_password1_for_signature
ROBOKASSA_PASSWORD2=your_password2_for_result_url
ROBOKASSA_TEST_MODE=true

# Session Security
SESSION_LIFETIME=86400
SESSION_NAME=TOOSMART_PREMIUM

# Email Configuration
MAIL_FROM=noreply@toosmart.com
MAIL_REPLY_TO=support@toosmart.com
SITE_URL=https://toosmart.com

# Security
USERS_FILE_PATH=/path/to/private/users.json
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW=900

# Development
DEBUG_MODE=false
