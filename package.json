{
  "name": "toosmart",
  "version": "1.0.0",
  "description": "Статичный сайт для образовательных статей",
  "main": "scripts/build.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/build.js && node scripts/open-build-preview.js",
    "build:assets": "vite build",
    "build:free": "vite build && node scripts/build.js --target=free",
    "build:premium": "vite build && node scripts/build.js --target=premium",
    "build:recommendations": "vite build && node scripts/build.js --target=recommendations",
    "build:all": "vite build && node scripts/build.js",
    "preview": "vite preview",
    "preview:dist": "live-server dist --port=3003",
    "dev:lan": "node scripts/dev-lan.js",
    "admin": "node admin/server.js",
    "admin:lan": "PORT=3001 node admin/server.js",
    "clean": "rm -rf dist/*",
    "lint:links": "node scripts/link-linter.js",
    "lint:links:fix": "node scripts/link-linter.js --fix"
  },
  "keywords": [
    "markdown",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "dompurify": "^3.1.6",
    "jsdom": "^24.0.0",
    "marked": "^11.0.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "csso": "^5.0.5",
    "live-server": "^1.2.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vite-plugin-handlebars": "^2.0.0"
  }
}
